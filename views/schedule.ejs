<%- include('header') %>

    <!-- Contact Start -->

    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class="section-title bg-white text-center text-primary px-3">Schedule Now</p>
                <h1 class="mb-5">預約洗鞋</h1>
            </div>
            <form class="wow fadeInUp" action="/formconfirmation" method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <hr>
                    <legend>基本聯絡資料</legend>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Your Name"
                                required="requored">
                            <label for="name">姓名</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input type="tel" class="form-control" id="phone" name="phone"
                                placeholder="Your Phone Number" required="requored">
                            <label for="phone">聯絡電話</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Your Email"
                                required="requored">
                            <label for="email">電子郵件</label>
                        </div>
                    </div>
                    <legend>選擇時間</legend>
                    <div class="col-md-3">
                        <div class="form-floating">
                            <input type="date" class="form-control" id="DEL-date" name="DEL-date"
                                placeholder="Deliver Date">
                            <label for="DEL-date">選擇預計送鞋日期</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating">
                            <select class="form-select" id="DEL-time" name="DEL-time">
                                <option selected disabled="disabled">--- 請選擇送鞋時段 ---</option>
                                <option value="12:00-14:00">12:00-14:00</option>
                                <option value="14:00-16:00">14:00-16:00</option>
                                <option value="16:00-18:00">16:00-18:00</option>
                                <option value="18:00-19:40">18:00-19:40</option>
                            </select>
                            <label for="DEL-time">送鞋時段</label>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-floating">
                          <input type="number" class="form-control" id="shoe-quantity" name="shoe-quantity" placeholder="Number of Shoes" min="1">
                          <label for="shoe-quantity">鞋子數量</label>
                        </div>
                      </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <p class="mt-3">＊清潔時間約5-7個工作天，<a href="/faq">FAQ</a></p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="特殊要求" id="special-requests"
                                name="special-requests" style="height: 100px"></textarea>
                            <label for="special-requests">特殊要求</label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-check">
                            <label class="ms-1" for="join-member">是否願意加入護鞋美鞋工坊會員？</label>
                                <input type="radio" id="join-member-yes" name="join-member" value="yes">
                                <label for="join-member-yes">是</label>
                                <input type="radio" id="join-member-no" name="join-member" value="no">
                                <label for="join-member-no">否</label>                           
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="terms" id="terms-agree" value="agree"
                                required>
                            <label class="form-check-label ms-1" for="flexCheckDefault">
                                我已閱讀<a href="/privacypolicy">服務與隱私條款</a>並同意約定條款說明
                            </label>
                        </div>
                    </div>
                    <div class="col-12 d-flex justify-content-center">
                        <button class="btn btn-dark btn btn-lg rounded-pill py-2 px-4 mt-3" type="submit"
                            data-bs-toggle="modal" data-bs-target="#exModal" id="mysubmit">送出預約</button>
                    </div>
            </form>
        </div>
    </div>
    </div>
    </div>
    

    <%- include('footer') %>